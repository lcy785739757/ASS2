<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/test_question_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="问题"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#22000000"
            />
        <RadioGroup
            android:id="@+id/test_ans_group"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="5dp">
            <RadioButton
                android:id="@+id/test_ans_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A"/>
            <RadioButton
                android:id="@+id/test_ans_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B"/>
            <RadioButton
                android:id="@+id/test_ans_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C"/>
            <RadioButton
                android:id="@+id/test_ans_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D"/>
        </RadioGroup>
        <View
            android:id="@+id/test_sec_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#22000000"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/test_result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="正确答案是："
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
